@model Taksopark.MVC.Models.LogInModel

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Validation/LoginValidation.js"></script>
@using (Html.BeginForm()) 
{   

    @Html.AntiForgeryToken()
    <div class="loginFormContentHolderClass" style="margin-bottom: 130px; margin-top: 30px; margin-left: 30%">
        <hr />
        <div style="margin-left: 35%">
            <span id="errorMessageId">@Html.ValidationSummary(true, "", new { @class = "text-danger" })</span>
        </div>
        <div class="loginContentHolderClass" style="margin-left: 15%">
            <input type="text" id="loginTextBoxId" class="textBoxValidationClass" name="Login" placeholder="Login" />
            <span id="loginValidationErrorSpanId"></span>
            @Html.ValidationMessageFor(model => model.Login, "", new { @id = "loginValidationErrorSpanId" })
        </div>
        <br />
        <div class="loginContentHolderClass" style="margin-left: 15%">
            <input type="password" id="passwordTextBoxId" class="textBoxValidationClass" name="Password" placeholder="Password" />
            <span id="passwordValidationErrorSpanId"></span>
            @Html.ValidationMessageFor(model => model.Password, "", new { @id = "loginValidationErrorSpanId"  })
        </div>
        <br />
        <div id="loginButtonHolderId" class="loginButtonHolderClass" style="margin-left: 15%">
            <input type="submit" id="loginButtonId" value="Log In" class="abutton" />
        </div>
    </div>
}
