@using System.Web.Optimization
@using System.Web.Optimization
@using Taksopark.MVC.Controllers.Home
@Styles.Render("~/Content/Layout/my-css")
@Scripts.Render("~/bundles/ready-script")
@Styles.Render("~/Content/Layout/slider-style")
@Scripts.Render("~/bundles/slider-js")
<script>
    auto();
</script>
<script>
    $(document).ready(function () {
        $("#dtBox").DateTimePicker();
    });
</script>

<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.1/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="/Content/Layout/DateTimePicker.css" />
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css">
<script type="text/javascript" src="/Scripts/app-scripts/DateTimePicker.js"></script>
<meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
<script src="https://maps.googleapis.com/maps/api/js?sensor=false.." type="text/javascript"></script>
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.1/jquery-ui.js"></script>
<script src="/Scripts/app-scripts/map-script.js"></script>
<script src="/Scripts/app-scripts/auto-complite.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
<script src="/Scripts/app-scripts/order-dialog.js"></script>
<script src="/Scripts/OrderTaxi/OrderTaxi.js"></script>

<div class="container_12">
</div>
<div class="clear"></div>
<div class="inner-map-div" style="margin-bottom: 200px;">
    @using (Ajax.BeginForm("OrderTaxi", new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "GET",
        UpdateTargetId = "orderTaxiFormHolderId"
    }))
    {
    <div id="dialog" title="Dialog" class="ui-dialog-title">
        <p>Thank you for order. We will contact with you.</p>
    </div>
    <div id="orderTaxiFormHolderId">
        <div id="toggle" style="text-align: center">
            <input type="text" data-field="datetime" name="date-time" placeholder="Date and time:" style="height: 40px; font-size: 18px;">
            <div id="dtBox"></div>
        </div>

        <div id="placeFronContettHolderId">
            <span id="paceFromErrorSpanId"></span>
            <input type="text" id="placeFromTextBoxId" class="textBoxValidationClass" name="txtFrom" placeholder="From:" />
        </div>

        <div id="placeToContettHolderId">
            <span id="paceToErrorSpanId"></span>
            <input type="text" id="placeToTextBoxId" class="textBoxValidationClass" name="txtTo" placeholder="To:" />
        </div>

        <div id="phoneContettHolderId">
            <span id="phoneErrorSpanId"></span>
            <input type="text" id="phoneTextBoxId" class="textBoxValidationClass" name="txtPhone" placeholder="Phone:" />
        </div>
        <div id="orderTaxiButtonHolderId">
            <button type="submit" id="orderTaxiButtonId" class="abutton" style="height: 34px;">OrderTaxi</button>
            @*
            <button id="show" class="abutton">More</button>*@
        </div>
        <br />
    </div>
    }
    <br />
    <div id="showTheWayHolderId">
        <span style="font-size: 19px;"><span class="color1">Location</span> on map</span>
        <div style="float: right">
            <label for="distance"><span class="color1">D</span>istance (km): </label>
            <input type="text" name="distance" id="distance" readonly="true" />
            <label for="distance"><span class="color1">A</span>pproximate price (uah): </label>
            <input type="text" name="price" id="price" readonly="true" />
            <button id="showTheWayButtonId" class="abutton">Show the way</button>
        </div>
    </div>
    <div id="TaxiMap1" style="width: 95%; height: 88%"></div>
</div>
