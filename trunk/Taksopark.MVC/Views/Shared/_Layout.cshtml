@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/Layout/my-css")
    @Styles.Render("~/Content/Layout/css")
    @Scripts.Render("~/bundles/jquery")
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body style="background-color: white">
    @RenderBody()
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <header>
        <div class="login-form-st modal fade" id="login-form">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h3>Login</h3>
            </div>
            <div class="modal-body">
                <div style="text-align: left;">
                    <input type="text" placeholder="Login" />
                    <br />
                    <br />
                    <input type="password" placeholder="Password" />
                    <br />
                    <input type="checkbox">Remember me?
                </div>
            </div>
            <div class="modal-footer">

                <a href="#" class="btn" data-dismiss="modal">Login</a>
                <a href="#" class="btn btn-primary">Cancel</a>
            </div>
        </div>
        <div>
            <div class="login-st" style="margin-right: 5px;">
                <a type="button" href="#login-form" data-toggle="modal"><button class="abutton pulse width1">Login</button></a>
                <a type="button" href="#login-form" data-toggle="modal"><button class="abutton pulse width2">Registration</button></a>
            </div>
        </div>
        

        <div class="menu_block">
            <div class="container_12">
                <div class="grid_12">
                    <nav class="horizontal-nav full-width horizontalNav-notprocessed">
                        <ul class="sf-menu">
                            <li class="current"><a href="index.html">Home</a></li>
                            <li><a href="#">About</a></li>
                            <li><a href="#">Cars</a></li>
                            <li><a href="#">Services</a></li>
                            <li><a href="#">Contacts</a></li>
                        </ul>
                    </nav>
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        @{ Html.RenderPartial("PartialView");}
        @*@Html.Partial("PartialBody")*@
    </header>
    <footer>
        <div>
            <a href="#" id="toTop" style="margin-right: -580px; right: 50%; display: block;">
                <span id="toTopHover" style="opacity: 0;"></span>
            </a>
        </div>
        <div class="container_12 container_12_2">
            <div class="grid_12">
                <div class="f_phone"><span>Call Us:</span> + 380631709471</div>
                <div class="copy">
                    <div class="st1">
                        <div class="brand">Lviv<span class="color1">T</span>axi </div>
                        &copy; 2014	|
                    </div>
                    Website designed by A-Team<br>
                    Epam IT Lab 2014.
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </footer>
</body>
</html>